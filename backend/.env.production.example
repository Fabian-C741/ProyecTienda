# ===============================================
# CONFIGURACIÓN DE PRODUCCIÓN - HOSTINGER
# ===============================================
# ⚠️ IMPORTANTE: Este es un EJEMPLO
# ⚠️ NUNCA subas el archivo .env real a Git
# ===============================================

# === APLICACIÓN ===
APP_NAME="Tu Tienda Online"
APP_ENV=production
APP_KEY=base64:GENERAR_CON_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://tusubdominio.tudominio.com

# === LOGS Y DEBUGGING ===
LOG_CHANNEL=daily
LOG_LEVEL=error
LOG_DEPRECATIONS_CHANNEL=null
LOG_RETENTION_DAYS=14

# === BASE DE DATOS (Hostinger MySQL) ===
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=u123456789_nombre_bd
DB_USERNAME=u123456789_usuario
DB_PASSWORD=PASSWORD_SUPER_SEGURO_AQUI

# === CACHE Y SESIONES ===
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_SECURE_COOKIE=true

# === SANCTUM (Autenticación API) ===
SANCTUM_STATEFUL_DOMAINS=tusubdominio.tudominio.com,www.tudominio.com
SESSION_DOMAIN=.tudominio.com

# === CORS ===
FRONTEND_URL=https://tusubdominio.tudominio.com
ALLOWED_ORIGINS=https://tusubdominio.tudominio.com

# === EMAIL (SendGrid - Gratis hasta 100/día) ===
MAIL_MAILER=smtp
MAIL_HOST=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USERNAME=apikey
MAIL_PASSWORD=SG.TU_API_KEY_DE_SENDGRID
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@tudominio.com
MAIL_FROM_NAME="${APP_NAME}"

# === MERCADO PAGO (Producción) ===
# Obtén tus credenciales en: https://www.mercadopago.com/developers
MERCADOPAGO_PUBLIC_KEY=tu_public_key_mercadopago_produccion
MERCADOPAGO_ACCESS_TOKEN=tu_access_token_mercadopago_produccion
MERCADOPAGO_WEBHOOK_SECRET=tu_webhook_secret_mercadopago

# === STRIPE (Producción) ===
# Obtén tus credenciales en: https://dashboard.stripe.com/apikeys
STRIPE_PUBLIC_KEY=tu_clave_publica_stripe_aqui
STRIPE_SECRET_KEY=tu_clave_secreta_stripe_aqui
STRIPE_WEBHOOK_SECRET=tu_webhook_secret_stripe_aqui

# === PAYPAL (Producción) ===
# Obtén tus credenciales en: https://developer.paypal.com/
PAYPAL_MODE=live
PAYPAL_CLIENT_ID=tu_client_id_paypal_produccion
PAYPAL_SECRET=tu_secret_paypal_produccion

# === SEGURIDAD ===
# Rate Limiting (requests por minuto)
THROTTLE_REQUESTS=60
THROTTLE_DECAY_MINUTES=1

# Login attempts antes de bloquear
LOGIN_MAX_ATTEMPTS=5
LOGIN_DECAY_MINUTES=15

# Password requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true

# === SUBIDA DE ARCHIVOS ===
MAX_UPLOAD_SIZE=5120
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp
ALLOWED_DOCUMENT_TYPES=pdf

# === MANTENIMIENTO ===
MAINTENANCE_MODE=false
MAINTENANCE_SECRET=tu_secret_para_acceso_durante_mantenimiento

# === TIMEZONE ===
APP_TIMEZONE=America/Argentina/Buenos_Aires

# === BACKUP (Opcional) ===
BACKUP_NOTIFICATION_EMAIL=admin@tudominio.com
